{
  "name": "eleventy-test",
  "version": "0.1.0",
  "description": "Multi-setup testing for Eleventy plugins",
  "scripts": {
    "start": "node dist/index.js",
    "watch": "npm-run-all --parallel 'build:js --watch' 'build:types -w'",
    "build": "yarn build:js && yarn build:types",
    "build:js": "esbuild index.ts --bundle --outfile=dist/index.js --platform=node",
    "build:types": "tsc --declaration index.ts --emitDeclarationOnly --outDir ./dist",
    "test": "ava tests/test.mjs --timeout=30s"
  },
  "repository": "https://github.com/Denperidge/eleventy-test.git",
  "author": "Denperidge",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "ava": "^6.2.0",
    "esbuild": "^0.24.0",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  }
}
